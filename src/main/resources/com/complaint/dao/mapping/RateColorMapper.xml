<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.complaint.dao.RateColorDao" >
	<sql id="Base_Column_List" >
    RANK_CODE,RANK_COLOR,SCENE
 	</sql>
 	<select id="queryRateColors" resultType="com.complaint.model.RateColor">
 	select <include refid="Base_Column_List"/> from t_rate_color where type = 1
 	</select>
 	<update id="update" parameterType="com.complaint.model.RateColor">
 		update T_RATE_COLOR set RANK_COLOR =#{rank_color} where RANK_CODE = #{rank_code} and SCENE= #{scene} and type = 1
 	</update>
</mapper>
